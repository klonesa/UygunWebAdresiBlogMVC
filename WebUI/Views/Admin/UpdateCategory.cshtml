@model WebUI.Data.Entities.Categories
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Formunu Düzenleyiniz</h2>

<div>
    @using (Html.BeginForm("UpdateCategory", "Admin", FormMethod.Post))
    {
        <div class="form-group" align="right">
            <a href="/admin/categories/"><i class="fas fa-arrow-circle-left mr-2"></i>Geri Dön</a>
        </div>
        <div class="form-group mt-4">
            <label>Kategori Adı</label>
            @Html.TextBoxFor(x => x.CategoryName, new { @maxlength = "300", @class = "form-control", required = "required" })
        </div>
        <div class="form-group mt-4" align="right">
            <button type="submit" class="btn btn-info animation-on-hover">İşlemi Tamamlamak İçin Tıklayınız</button>
        </div>
    }
</div>

