@model IEnumerable<WebUI.Data.Entities.Categories>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div align="left" class="mb-4">
    <a href="/admin/"><i class="fas fa-arrow-circle-left mr-2"></i>Geri Dön</a>
</div>

<h2>Kategoriler Listesi </h2>

<div align="right">
    <a href="/admin/addcategory/" class="btn btn-primary mb-4">Kategori Ekle</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Kategori Adı</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.CategoryId</th>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/admin/deletecategory/@item.CategoryId" class="badge badge-danger"><i class="fas fa-trash-alt"></i></a>
                    <a href="/admin/updatecategory/@item.CategoryId" class="badge badge-success"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

